    <!-- from 表 -->
    <sql id="from_table">
    	form product_extended_attribute_config
    </sql>
    
    <!-- intsert to 表 -->
    <sql id="insert_product">
    	insert into product_extended_attribute_config
    </sql>
    
     <!-- intsert to 表 -->
    <sql id="insert_common_column">
    	insert into product_extended_attribute_config
    </sql>
    
    <!-- 查询通用列 -->
    <sql id="select_common_column">
    	select 
